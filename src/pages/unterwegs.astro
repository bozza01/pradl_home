---
import BaseLayout from "../layouts/BaseLayout.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
---

<BaseLayout
  title="Unterwegs – Familie Pradl"
  description="Reisen & Eindrücke der Familie Pradl"
>

<Breadcrumbs items={[
  { label: "Start", href: "/" },
  { label: "Unterwegs" }
]} />

<section class="content">

  <h1 data-trip-title></h1>
  <p data-trip-text></p>

  <div class="carousel" data-carousel>
    <div class="track"></div>

    <button class="nav prev" aria-label="Vorheriges Bild">‹</button>
    <button class="nav next" aria-label="Nächstes Bild">›</button>

    <div class="counter">
      <span data-current>1</span> / <span data-total></span>
    </div>
  </div>

  <h2>Weitere Reisen</h2>

  <section class="trip-grid" data-trip-grid></section>

</section>

<script src="/scripts/trips.js" defer></script>

<style>
.trip-grid {
  display: grid;
  gap: 1rem;
  margin-top: 2rem;
}

.trip-card {
  border: none;
  background: none;
  cursor: pointer;
  text-align: left;
  transition: transform .2s ease;
}

.trip-card:hover {
  transform: translateY(-4px);
}

.trip-card.active {
  outline: 2px solid #222;
  border-radius: 12px;
}

.trip-card img {
  width: 100%;
  aspect-ratio: 4/3;
  object-fit: cover;
  border-radius: 12px;
}

.trip-card span {
  display: block;
  margin-top: 0.5rem;
  font-size: 0.9rem;
}

@media (min-width: 700px) {
  .trip-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
</style>

</BaseLayout>